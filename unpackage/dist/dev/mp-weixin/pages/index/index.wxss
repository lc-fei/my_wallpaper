.home-layout {
  width: 750rpx;
}
.home-layout .banner {
  height: 345rpx;
  width: 750rpx;
  overflow: hidden;
  border-radius: 20rpx;
}
.home-layout .banner swiper-item {
  border-radius: 20rpx;
  padding: 0 30rpx;
}
.home-layout .banner swiper-item image {
  height: 100%;
  width: 100%;
}
.notice {
  width: 690rpx;
  height: 80rpx;
  display: flex;
  line-height: 80rpx;
  background-color: #F9F9F9;
  border-radius: 80rpx;
  margin: 0 auto;
  margin-top: 30rpx;
}
.notice .left {
  width: 140rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.notice .left  .uni-icons {
  color: #28B389 !important;
}
.notice .center {
  flex: 1;
}
.notice .center swiper {
  width: 100%;
  height: 100%;
  line-height: 80rpx;
}
.notice .center swiper-item {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.notice .right {
  width: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.select  .uni-icons {
  color: #28B389 !important;
}
.select scroll-view {
  white-space: nowrap;
}
.select .body {
  width: 720rpx;
  margin-left: 30rpx;
}
.select .body view {
  margin-right: 15rpx;
  height: 446rpx;
  width: 202rpx;
  display: inline-block;
}
.select .body view image {
  height: 100%;
  width: 100%;
}
.select .body view:last-child {
  margin-right: 30rpx;
}
.theme .body {
  width: 750rpx;
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 10rpx;
  padding: 0 30rpx 30rpx 30rpx;
}
swiper-active {
  background-color: red;
}